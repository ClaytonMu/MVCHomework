@model IEnumerable<MVCHomework1.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
        <p>
            Keyword: @Html.TextBox("keyword")
            <input type="submit" value="查詢" />
            @Html.Partial("_ExportToExcelPartial")
        </p>
    }

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("銀行名稱", "Index", new { sortOrder = "銀行名稱_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th>
            @Html.ActionLink("銀行代碼", "Index", new { sortOrder = "銀行代碼_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th>
            @Html.ActionLink("分行代碼", "Index", new { sortOrder = "分行代碼_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th>
            @Html.ActionLink("帳戶名稱", "Index", new { sortOrder = "帳戶名稱_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th>
            @Html.ActionLink("帳戶號碼", "Index", new { sortOrder = "帳戶號碼_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = "客戶名稱_" + ViewBag.SortOrder, keyword = ViewBag.Keyword })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
