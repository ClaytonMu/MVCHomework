@using PagedList
@using PagedList.Mvc
@model IEnumerable<MVCHomework1.Models.客戶聯絡人>

@Html.Hidden("sortOrder")
@Html.Hidden("sortColumn")
@Html.Hidden("export")
@Html.Hidden("page")
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("職稱", "Index")
            @Html.DropDownList("jobTitle", null, "請選擇職級", new { onchange = "this.form.submit();" })
        </th>
        <th>
            @Html.ActionLink("姓名", "Index", null, new { onclick = "return Sort('姓名');" })

        </th>
        <th>
            @Html.ActionLink("Email", "Index", null, new { onclick = "return Sort('Email');" })

        </th>
        <th>
            @Html.ActionLink("手機", "Index", null, new { onclick = "return Sort('手機');" })

        </th>
        <th>
            @Html.ActionLink("電話", "Index", null, new { onclick = "return Sort('電話');" })

        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", null, new { onclick = " return Sort('客戶名稱');" })

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model as IPagedList, p => Url.Action("Index", new { page = p }))
